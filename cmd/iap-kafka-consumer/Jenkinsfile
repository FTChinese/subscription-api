#!/usr/bing/env groovy

pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Build kafka consumer'
                sh 'make build-consumer'
                archiveArtifacts artifacts: 'build/linux/*', fingerprint: true
            }
        }
        stage('Deploy') {
            when {
                expression {
                    currentBuild.result == null || currentBuild.result == 'SUCCESS'
                }
            }
            steps {
                echo 'Sync config file'
                sh 'make config'
                echo 'Copy binary'
                sh 'make publish-consumer'
                sh 'make restart-consumer'
            }
        }
    }
}
